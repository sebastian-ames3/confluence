# API Keys
CLAUDE_API_KEY=your_claude_api_key_here
WHISPER_API_KEY=your_openai_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# Database
DATABASE_URL=sqlite:///database/confluence.db

# Security (PRD-015)
SECRET_KEY=your_secret_key_here

# HTTP Basic Auth (PRD-015)
# Set these in production to enable authentication
# If AUTH_PASSWORD is not set, dev mode allows unauthenticated access
AUTH_USERNAME=admin
AUTH_PASSWORD=your-secure-password-here

# Rate Limiting (PRD-015)
# Format: requests/period (e.g., 100/minute, 10/hour)
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_SYNTHESIS=10/hour
RATE_LIMIT_TRIGGER=5/hour
RATE_LIMIT_SEARCH=60/minute

# 42 Macro Credentials
MACRO42_EMAIL=your_email_here
MACRO42_PASSWORD=your_password_here

# Discord (for local script)
DISCORD_USER_TOKEN=your_discord_token_here

# Discord Channel Config (PRD-015)
# In production, set this to avoid using local config files
# DISCORD_CHANNELS='{"server_name":"...","channels_to_monitor":[...]}'

# Railway Deployment
RAILWAY_ENV=production
RAILWAY_API_URL=https://your-app.up.railway.app

# Trigger API Key (for GitHub Actions scheduler authentication)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
TRIGGER_API_KEY=your-secure-random-key-here

# KT Technical
KT_EMAIL=your_email_here
KT_PASSWORD=your_password_here
